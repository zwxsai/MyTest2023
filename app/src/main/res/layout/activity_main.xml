<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!--    底部导航-->
    <com.chaychan.library.BottomBarLayout
        android:id="@+id/bbl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <com.chaychan.library.BottomBarItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconNormal="@drawable/activity_main_tab_home_normal"
            app:iconSelected="@drawable/activity_main_tab_home_selected"
            app:itemMarginTop="-5dp"
            app:itemText="首页"
            app:itemTextBold="true"
            app:itemTextSize="8sp"
            app:openTouchBg="true"
            app:textColorNormal="@color/black"
            app:textColorSelected="@color/red"
            app:touchDrawable="@drawable/activity_main_tab_selector_bg" />

        <com.chaychan.library.BottomBarItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconNormal="@drawable/activity_main_tab_video_normal"
            app:iconSelected="@drawable/activity_main_tab_video_selected"
            app:itemMarginTop="-5dp"
            app:itemText="视频"
            app:itemTextBold="true"
            app:itemTextSize="8sp"
            app:openTouchBg="true"
            app:textColorNormal="@color/black"
            app:textColorSelected="@color/red"
            app:touchDrawable="@drawable/activity_main_tab_selector_bg"
            app:unreadThreshold="99" />


        <com.chaychan.library.BottomBarItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconNormal="@drawable/activity_main_tab_micro_normal"
            app:iconSelected="@drawable/activity_main_tab_micro_selected"
            app:itemMarginTop="-5dp"
            app:itemText="微头条"
            app:itemTextBold="true"
            app:itemTextSize="8sp"
            app:openTouchBg="true"
            app:textColorNormal="@color/black"
            app:textColorSelected="@color/red"
            app:touchDrawable="@drawable/activity_main_tab_selector_bg" />

        <com.chaychan.library.BottomBarItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconNormal="@drawable/activity_main_tab_me_normal"
            app:iconSelected="@drawable/activity_main_tab_me_selected"
            app:itemMarginTop="-5dp"
            app:itemText="我的"
            app:itemTextBold="true"
            app:itemTextSize="8sp"
            app:openTouchBg="true"
            app:textColorNormal="@color/black"
            app:textColorSelected="@color/red"
            app:touchDrawable="@drawable/activity_main_tab_selector_bg" />

        <com.chaychan.library.BottomBarItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconNormal="@drawable/activity_main_tab_me_normal"
            app:iconSelected="@drawable/activity_main_tab_me_selected"
            app:itemMarginTop="-5dp"
            app:itemText="我的2"
            app:itemTextBold="true"
            app:itemTextSize="8sp"
            app:openTouchBg="true"
            app:textColorNormal="@color/black"
            app:textColorSelected="@color/red"
            app:touchDrawable="@drawable/activity_main_tab_selector_bg" />
    </com.chaychan.library.BottomBarLayout>

    <com.example.mytest2023.widget.other.CustomViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bbl" />

</RelativeLayout>
